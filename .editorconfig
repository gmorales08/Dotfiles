root = true

[*]
indent_size              = 4
end_of_line              = lf
charset                  = utf-8
trim_trailing_whitespace = true

[*.{c,cpp,h,hpp,cu}]
indent_style             = space
indent_size              = 4
tab_width                = 4
insert_final_newline     = true
max_line_length          = 80

[*.{sql,db}]
indent_style             = space
indent_size              = 2
tab_width                = 2
insert_final_newline     = true

[*.sh]
indent_style             = space
indent_size              = 2
tab_width                = 2
insert_final_newline     = true

[*.{s,asm}]
indent_style             = space
indent_size              = 4
tab_width                = 4
insert_final_newline     = true
max_line_length          = 80

[*.md]
trim_trailing_whitespace = false

[Makefile]
indent_style             = tab

[*.txt]
indent_style             = space
indent_size              = 4
tab_width                = 4
